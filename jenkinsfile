pipeline {
    agent any

    stages {
        stage('Checking out the code') {
            steps {
                echo "Installing dependencies..."
                sh 'npm install'
            }
        }

        stage('Run integration tests') {
            steps {
                echo "Running integration tests..."
                sh 'npm run test'
            }
        }

        stage('Manual Approval') {
            steps {
                script {
                    input message: "Deploy to Production?", ok: "Deploy"
                }
            }
        }
    }
}
